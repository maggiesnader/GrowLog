@model IEnumerable<GrowLog.Models.LogEntryListItem>

@{
    ViewBag.Title = "Log Entries";
}

<h2>Log Entries</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Plant List", "Index", "Plant") |
    @Html.ActionLink("Location List", "Index", "Location")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlantName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Details", "LogEntry", new { id = item.LogEntryID}, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlantName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.LogEntryID }) |
            @Html.ActionLink("Details", "Details", new { id = item.LogEntryID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.LogEntryID }) |
            @Html.ActionLink("Back to Plant List", "Index", "Plant")
        </td>
    </tr>
}

</table>
